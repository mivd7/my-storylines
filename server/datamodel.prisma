type Story {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  title: String
  openingLine: String!
  additions: [Addition]
  author: User
}

type User {
  id: ID! @unique
  name: String! @unique
  email: String! @unique
  password: String! @unique
  accessRole: AccessRole!
  stories: [Story!]!
  additions: [Addition!]
}

type Addition {
  id: ID! @unique
  createdAt: DateTime!
  text: String!
  story: Story!
  writtenBy: User
}

type AuthPayload {
  token: String
  user: User
  name: String
}

enum AccessRole {
  USER
  ADMIN
}

scalar DateTime