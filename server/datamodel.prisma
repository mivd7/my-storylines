type Story {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  content: String!
  additions: [Addition]
  published: Boolean
  author: User
}

type User {
  id: ID! @unique
  name: String! @unique
  email: String! @unique
  password: String! @unique
  accessRole: AccessRole!
  stories: [Story!]!
  additions: [Addition!]
}

type Addition {
  id: ID! @unique
  createdAt: DateTime!
  text: String!
  story: Story!
  writtenBy: User
}

enum AccessRole {
  USER
  ADMIN
}